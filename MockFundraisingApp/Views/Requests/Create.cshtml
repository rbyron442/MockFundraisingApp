@model MockFundraisingApp.ViewModels.CreateRequestVm
@{
    ViewData["Title"] = "Create Request";
    var types = (string[])ViewBag.Types;
}

<h2>Create Donation Request</h2>

<form asp-action="Create" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Requester</label>
        <input asp-for="Requester" class="form-control" />
        <span asp-validation-for="Requester" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Donation limit required</label>
        <input asp-for="DonationLimit" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="DonationLimit" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Request type</label>
        <select asp-for="RequestType" class="form-select">
            <option value="">Select...</option>
            @foreach (var t in types)
            {
                <option value="@t">@t</option>
            }
        </select>
        <span asp-validation-for="RequestType" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Create</button>
    <a class="btn btn-secondary" href="/">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
